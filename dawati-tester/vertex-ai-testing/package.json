  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "@types/pngjs": "^6.0.5",
    "@types/pixelmatch": "^5.2.6",
    "typescript": "^5.7.2",
    "ts-node": "^10.9.2",
    "eslint": "^9.17.0",
    "prettier": "^3.4.2"

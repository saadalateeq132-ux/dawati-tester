# Dawati Autonomous Tester Configuration
# Copy this file to .env and fill in your values

# Required: Your Gemini API key from https://aistudio.google.com/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# Required: The URL of your Dawati app (web version)
DAWATI_URL=https://your-dawati-app.vercel.app

# Optional: Test credentials for authentication testing
TEST_PHONE=+966501234567
TEST_EMAIL=test@dawati.app

# Test phone numbers for different scenarios
TEST_PHONE_NEW_CUSTOMER=+966501111111      # New customer → shows onboarding wizard
TEST_PHONE_EXISTING_CUSTOMER=+966502222222  # Existing customer → skips wizard
TEST_PHONE_NEW_VENDOR=+966503333333         # New vendor → shows vendor registration
TEST_PHONE_EXISTING_VENDOR=+966504444444    # Existing vendor → skips wizard

# Test emails for different scenarios
TEST_EMAIL_NEW=newuser@dawati.app           # New user → shows onboarding
TEST_EMAIL_EXISTING=existing@dawati.app     # Existing user → skips wizard

# Optional: Browser settings
HEADLESS=true
SLOW_MO=0
VIEWPORT_WIDTH=1280
VIEWPORT_HEIGHT=720

# Optional: Screenshot settings
FULL_PAGE_SCREENSHOTS=true
SCREENSHOT_QUALITY=80

# Optional: AI Analysis settings
AI_MODEL=gemini-2.0-flash
AI_MAX_TOKENS=4096
AI_TEMPERATURE=0.3

# Optional: Logging
LOG_LEVEL=info
